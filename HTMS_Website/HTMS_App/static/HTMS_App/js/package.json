{
  "name": "htms",
  "version": "1.2.0",
  "description": "Helpdesk Ticket Management System",
  "main": "controller.js",
  "scripts": {
    "start:js": "webpack",
    "build:js": "webpack --mode production",
    "watch:sass": "sass ./src/scss/home.scss ../home.css -w",
    "watch1:sass": "sass ./src/scss/new_incident.scss ../new_incident.css -w",
    "watch2:sass": "sass ./src/scss/index.scss ../index.css -w",
    "watch3:sass": "sass ./src/scss/inventory.scss ../inventory.css -w",
    "watch4:sass": "sass ./src/scss/new_assets.scss ../new_assets.css -w",
    "start:sass": "npm-run-all --parallel  watch:sass watch1:sass watch2:sass watch3:sass watch4:sass",
    "compile-sass1": "sass ./src/scss/home.scss ./src/css/home.compile.css",
    "compile-sass2": "sass ./src/scss/index.scss ./src/css/index.compile.css",
    "compile-sass3": "sass ./src/scss/inventory.scss ./src/css/inventory.compile.css",
    "compile-sass4": "sass ./src/scss/login_page.scss ./src/css/login_page.compile.css",
    "compile-sass5": "sass ./src/scss/new_assets.scss ./src/css/new_assets.compile.css",
    "compile-sass6": "sass ./src/scss/new_incident.scss ./src/css/new_incident.compile.css",
    "compile-sass7": "sass ./src/scss/sign_up.scss ./src/css/sign_up.compile.css",
    "compile:sass": "npm-run-all --parallel compile-sass1 compile-sass2 compile-sass3 compile-sass4 compile-sass5 compile-sass6 compile-sass7",
    "prefix1:css": "postcss --use autoprefixer -b 'last 10 versions' ./src/css/index.compile.css -o ./src/css/index.prefix.css",
    "prefix2:css": "postcss --use autoprefixer -b 'last 10 versions' ./src/css/inventory.compile.css -o ./src/css/inventory.prefix.css",
    "prefix3:css": "postcss --use autoprefixer -b 'last 10 versions' ./src/css/login_page.compile.css -o ./src/css/login_page.prefix.css",
    "prefix4:css": "postcss --use autoprefixer -b 'last 10 versions' ./src/css/new_assets.compile.css -o ./src/css/new_assets.prefix.css",
    "prefix5:css": "postcss --use autoprefixer -b 'last 10 versions' ./src/css/new_incident.compile.css -o ./src/css/new_incident.prefix.css",
    "prefix6:css": "postcss --use autoprefixer -b 'last 10 versions' ./src/css/sign_up.compile.css -o ./src/css/sign_up.prefix.css",
    "prefix7:css": "postcss --use autoprefixer -b 'last 10 versions' ./src/css/home.compile.css -o ./src/css/home.prefix.css",
    "prefix:css": "npm-run-all --parallel prefix1:css prefix2:css prefix3:css prefix4:css prefix5:css prefix6:css prefix7:css",
    "compress1:css": "sass ./src/css/home.prefix.css ../home.css --style compressed",
    "compress2:css": "sass ./src/css/index.prefix.css ../index.css --style compressed",
    "compress3:css": "sass ./src/css/inventory.prefix.css ../inventory.css --style compressed",
    "compress4:css": "sass ./src/css/login_page.prefix.css ../login_page.css --style compressed",
    "compress5:css": "sass ./src/css/new_assets.prefix.css ../new_assets.css --style compressed",
    "compress6:css": "sass ./src/css/new_incident.prefix.css ../new_incident.css --style compressed",
    "compress7:css": "sass ./src/css/sign_up.prefix.css ../sign_up.css --style compressed",
    "compress:css": "npm-run-all --parallel compress1:css compress2:css compress3:css compress4:css compress5:css compress6:css compress7:css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "start": "npm-run-all --parallel start:js start:sass"
  },
  "author": "Ahmed Qureshi",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "sass": "^1.56.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "slugify": "^1.6.5"
  }
}